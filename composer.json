{
    "require-dev": {
        "xwp/wp-dev-lib": "1.0.1",
        "brainmaestro/composer-git-hooks": "v2.6.1",
        "wp-coding-standards/wpcs": "2.0.0",
        "phpcompatibility/phpcompatibility-wp": "2.0.0",
        "friendsofphp/php-cs-fixer": "2.14.*",
        "squizlabs/php_codesniffer": "3.*",
        "dealerdirect/phpcodesniffer-composer-installer": "0.5.0"
    },
    "require": {
        "php": "^5.6 || >=7.0"
    },
    "scripts": {
        "cghooks": "sh vendor/bin/cghooks",
        "test": "vendor/bin/phpunit",
        "post-install-cmd": "sh vendor/bin/cghooks add --ignore-lock",
        "post-update-cmd": "sh vendor/bin/cghooks update",
        "check-style": "php-cs-fixer fix --using-cache=no --diff --dry-run .",
        "fix-style": "php-cs-fixer fix --using-cache=no ."
    },
    "extra": {
        "hooks": {
            "pre-commit": "./bin/hooks/pre-commit"
        }
    }
}
